root = true

# Standard settings
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
max_line_length = 120
trim_trailing_whitespace = true

# Groovy code style
[*.scala]
indent_style = space
indent_size = 2
continuation_indent_size = 2

# Groovy code style
[*.groovy]
indent_style = space
indent_size = 4
continuation_indent_size = 4

[*.gradle]
indent_style = space
indent_size = 4
continuation_indent_size = 4

[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
